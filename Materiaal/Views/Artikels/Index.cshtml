@model IEnumerable<Materiaal.ViewModels.Artikels.ArtikelIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Artikeloverzicht</h2>

<div style="margin-bottom: 5px;">
    <a href="@Url.Action("Create", "Artikels")" class="btn btn-info">
        Nieuw artikel aanmaken
    </a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.artikel.art_Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.artikel.voorraad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categorie.cat_Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.artikel.prijs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.artikel.Leverancier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.artikel.actief)
 
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.artikel.art_Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.artikel.voorraad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categorie.cat_Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.artikel.prijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.artikel.Leverancier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.artikel.actief)
        </td>
        <td>
            <abbr title="Artikel aanpassen">
                <a href="@Url.Action("Edit", "Artikels", new { id = item.artikel.art_Id})" class="btn btn-primary toggle-more-detail">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </abbr>
            <abbr title="Artikel verwijderen">
                <a href="@Url.Action("Delete", "Artikels", new { id = item.artikel.art_Id })" class="btn btn-danger toggle-more-detail">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </abbr>
        </td>
    </tr>
}

</table>
