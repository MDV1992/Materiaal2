@model IEnumerable<Materiaal.Models.Aanvraag.Tak>

@{
    ViewBag.Title = "Tak overzicht";
}

<h2>Overzicht</h2>

<p>
    @Html.ActionLink("Nieuwe tak toevoegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tak_Naam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tak_Naam)
        </td>
        <td>
            @Html.ActionLink("Bewerken", "Edit", new { id=item.tak_Id }) |
            @Html.ActionLink("Verwijderen", "Delete", new { id=item.tak_Id })
        </td>
    </tr>
}

</table>
